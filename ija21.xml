  <property name="project.jdk.home" value="${jdk.home.14}"/>
  <property name="project.jdk.bin" value="${jdk.bin.14}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.14"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.json-simple-1.1.classpath">
    <pathelement location="${basedir}/json-simple-1.1.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <path id="library.javafx-sdk-16.classpath">
    <fileset dir="C:/Users/1/.jdks/javafx-sdk-16/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  <path id="library.json-simple-1.1.classpath">
    <fileset dir="C:/Users/1/.jdks/json-simple-1.1.jar">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
      <include name="forms_rt.jar"/>
    </fileset>
    <fileset dir="${idea.home}/plugins/java/lib">
      <include name="javac2.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module IJA21 -->
  
  <dirname property="module.ija21.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.ija21" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ija21" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ija21" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ija21" value="-encoding UTF-8 -source 14 -target 14 ${compiler.args}"/>
  
  <property name="ija21.output.dir" value="${module.ija21.basedir}/out/production/IJA21"/>
  <property name="ija21.testoutput.dir" value="${module.ija21.basedir}/out/test/IJA21"/>
  
  <path id="ija21.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ija21.module.production.classpath">
    <path refid="${module.jdk.classpath.ija21}"/>
    <path refid="library.javafx-sdk-16.classpath"/>
    <path refid="library.json-simple-1.1.classpath"/>
  </path>
  
  <path id="ija21.runtime.production.module.classpath">
    <pathelement location="${ija21.output.dir}"/>
    <path refid="library.javafx-sdk-16.classpath"/>
    <path refid="library.json-simple-1.1.classpath"/>
  </path>
  
  <path id="ija21.module.classpath">
    <path refid="${module.jdk.classpath.ija21}"/>
    <pathelement location="${ija21.output.dir}"/>
    <path refid="library.javafx-sdk-16.classpath"/>
    <path refid="library.json-simple-1.1.classpath"/>
  </path>
  
  <path id="ija21.runtime.module.classpath">
    <pathelement location="${ija21.testoutput.dir}"/>
    <pathelement location="${ija21.output.dir}"/>
    <path refid="library.javafx-sdk-16.classpath"/>
    <path refid="library.json-simple-1.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.ija21">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ija21">
    <patternset refid="excluded.from.module.ija21"/>
  </patternset>
  
  <path id="ija21.module.sourcepath">
    <dirset dir="${module.ija21.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ija21" depends="compile.module.ija21.production,compile.module.ija21.tests" description="Compile module IJA21"/>
  
  <target name="compile.module.ija21.production" depends="register.custom.compilers" description="Compile module IJA21; production classes">
    <mkdir dir="${ija21.output.dir}"/>
    <javac2 destdir="${ija21.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ija21}/javac">
      <compilerarg line="${compiler.args.ija21}"/>
      <bootclasspath refid="ija21.module.bootclasspath"/>
      <classpath refid="ija21.module.production.classpath"/>
      <src refid="ija21.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ija21"/>
    </javac2>
    
    <copy todir="${ija21.output.dir}">
      <fileset dir="${module.ija21.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ija21.tests" depends="register.custom.compilers,compile.module.ija21.production" description="compile module IJA21; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ija21" description="cleanup module">
    <delete dir="${ija21.output.dir}"/>
    <delete dir="${ija21.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.ija21" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.ija21" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>